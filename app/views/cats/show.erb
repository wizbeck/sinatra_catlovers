<h1><%=@cat.name%></h1>

<h3> Traits: </h3>
  <ul>
    <li>Age: <%=@cat.age %></li>
    <li>Personality: <%=@cat.personality %></li>
  </ul>
  <%if @cat.user%>
    <p> Owner: <%=@cat.user.username %> </p>
    <% end %>
  <!--if user currently logged in created this cat: show edit link and delete link -->
  <% if current_user == @cat.user%>
      <a href="/cats/<%=@cat.id%>/edit">Edit Traits</a>
      <br>
      <form action="/cats/<%=@cat.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button type="submit">Delete Cat</button>
      </form>
  <% end %>
  <br>